#ifndef NGRAMARRAY_H
#define NGRAMARRAY_H

#include <stdio.h>

typedef struct {
	int *ngram;//tablica indexow z tablicy slow
	int numberOfOccurences;
	double pmi;
	next_t *nextArray;
	int nextNumber;
}ngram_t;


typedef struct {
	int nextNgram;//index z tablicy ngramow-> zawsze mniejszy niz indeks ngramu od ktorego odchodzi
	int numberOfCollocations;//ile razy ten zwiazek sie powtorzyl
} next_t;

int findNgram(ngram_t *ngramArray, int arraySize, int ngramLevel, int *soughtNgram); //tablica intow jako ostatni argument jest specjalnie- patrz struktura
int findNext(ngram_t ngram, int nextNgramIndex)
#endif
